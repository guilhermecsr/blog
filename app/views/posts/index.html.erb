<h1>Listing Posts</h1>

<style>
  table, td, th {
    border: 1px solid lawngreen;
  }

  table {
    width: 100%;
  }

  th {
    height: 50px;
  }
</style>

<table border="5">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %> <%= link_to 'Edit', edit_post_path(post)%> <%= link_to 'Deletar', post_path(post),
                                                                                                        method: :delete,
                                                                                                        data: { confirm: 'Esta certo disso? MAOEE' } %> </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>

<p>
  <%= link_to 'Home', root_path%>

</p>