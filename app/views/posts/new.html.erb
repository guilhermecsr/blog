<h1> New Post</h1>
<h2>post/new</h2>
<h3>new_post_path <%= link_to new_post_path %>- posts#new</h3>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <h4>posts_path <%= link_to posts_path %> - posts#create</h4>

  <p>
    <%= form.submit %>
  </p>
<% end %>